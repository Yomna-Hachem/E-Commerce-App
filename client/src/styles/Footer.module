@import url('https://fonts.googleapis.com/css2?family=Jost:wght@300;400;500;700&family=Marcellus&display=swap');

.footer {
  background-color: var(--bg-offwhite);
  color: var(--text-body);
  font-family: var(--body-font);
  padding: 2rem 1rem 1rem;
  margin-top: 4rem; 
  border-top: 1px solid var(--border-light);
  font-size: 1.2rem; 
}

.container {
  display: flex;
  flex-direction: column;
  gap: 2rem;
  max-width: 1200px;
  margin: 0 auto;
}

.brand h2 {
  font-family: var(--heading-font);
  font-size: 1.8rem;
  color: var(--text-heading);
  margin-bottom: 0.5rem;
}

.brand p {
  font-size: 0.95rem;
  max-width: 300px;
  line-height: 1.5;
}

.links {
  display: flex;
  flex-wrap: wrap;
  gap: 2rem;
  justify-content: space-between;
}

.links h4 {
  font-family: var(--heading-font);
  font-size: 1.1rem;
  margin-bottom: 0.5rem;
  color: var(--text-heading);
}

.links a {
  display: block;
  font-size: 0.95rem;
  margin-bottom: 0.3rem;
  color: var(--text-body);
  text-decoration: none;
  transition: color 0.3s;
}

.links a:hover {
  color: var(--btn-primary-bg-hover);
}

.bottom {
  text-align: center;
  margin-top: 2rem;
  font-size: 0.85rem;
  color: #888;
  border-top: 1px solid #ddd;
  padding-top: 1rem;
}
